<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link 
        rel="stylesheet" 
        href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" 
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" 
        crossorigin="anonymous"
    >
    <link rel="stylesheet" href="css/style.css">
    <title></title>
</head>
<body>
    

    <div class="container">
        <div>
            <h1 class="mt-5"><%= header %></h1> 
        </div>

        <div class="row">
            <div class="col-xl-6">
                <a href="" class="btn btn-primary"> Back </a>
            </div>
            <div class="col-xl-6">
                <h3>Total number of students [7]</h3>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-xl-9">
                <input type="search" name="" id="" class="w-100">
            </div>
            <div class="col-xl-3">
                <a href="/dashboard/add" class="btn btn-primary">Add Student</a>
            </div>
        </div>
        <br>
        <table class="table table-bordered table-stripe table-hover table-info">
            <thead class="bg-dark text-light">
                <tr>
                    <th>Student ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>Action</th>
                    
                </tr>
            </thead>
              <tbody>
                <% records.forEach(function(tblstudents) { %>
                <tr>
                    <td><%= tblstudents.studentID %></td>
                    <td><%= tblstudents.first_name %></td>
                    <td><%= tblstudents.last_name %></td>
                    <td><%= tblstudents.gender %></td>
                    <td><%= tblstudents.email %></td>
                    <td>
                        <a href="/dashboard/view/<%= tblstudents.studentID %>" class="btn btn-info">View</a>
                        <a href="/dashboard/edit/<%= tblstudents.studentID %>" class="btn btn-success">Edit</a>
                    </td>
                </tr> 
                <% }) %>
            </tbody>
          
        </table>
     
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>
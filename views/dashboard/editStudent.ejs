<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link 
        rel="stylesheet" 
        href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" 
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" 
        crossorigin="anonymous"
    >   
</head>
<style>
    form{
        border: 1px solid black ;
        padding: 2rem;
    }
</style>
<body>
    <div class="container mt-5">
        <div>
   
        </div>

        <a href="/dashboard/manage-student" class="btn btn-primary mb-3">Back</a>

       <form action="/dashboard/edit/<%= records.studentID %>" method="post">
            <div class="row">
                <div class="form-group col-lg-3">
                    <img alt="User Pic" src="http://localhost:5050/images/uploaded_images/<%= records.image %>" class="img-circle img-responsive">
                    <input type="file" class="form-control" id="image_name" name="image_name" value="<%= records.image %>">
                </div>
                <div class="form-group col-lg-3">
                    <label for="first_name">Student ID</label>
                    <input type="text" class="form-control" value="<%= records.studentID %>" disabled>
                </div>
                <div class="form-group col-lg-3">
                    <label for="first_name">First Name</label>
                    <input type="text" class="form-control" id="first_name" name="first_name" value="<%= records.first_name %>">
                </div>
                <div class="form-group col-lg-3">
                    <label for="last_name">Last Name</label>
                    <input type="text" class="form-control" id="last_name" name="last_name" value="<%= records.last_name %>">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xl-12">
                    <label for="adress">Address</label>
                    <input type="text" class="form-control" id="address" name="address" value="<%= records.address %>">
                </div>
    
            </div>
         
          
            <div class="row">
                <div class="form-group col-lg-3">
                    <label for="gender">Gender</label><br>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="gender" id="gender" value="Female">
                        <label class="form-check-label" for="inlineRadio1">Female</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="gender" id="gender" value="Male">
                        <label class="form-check-label" for="inlineRadio2">Male</label>
                    </div>
                </div>
                <div class="form-group col-lg-4">
                    <label for="dob">Date of Birth</label>
                    <input type="text" class="form-control" id="dob" name="dob" 
                    value="<%= records.dob %>">
                </div>
                <div class="form-group col-lg-5">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= records.email %>">
                </div>
            </div>

            <div class="row">
                <div class="form-group  col-xl-3">
                    <label for="subject1">Physics</label>
                    <input type="text" class="form-control" id="subject1" name="subject1" onkeyup="sum()">
                </div>
                <div class="form-group  col-xl-3">
                    <label for="subject2">Descrete Mathematics</label>
                    <input type="text" class="form-control" id="subject2" name="subject2" onkeyup="sum()">
                </div>
                <div class="form-group  col-xl-3">
                    <label for="subject3">Data Structure</label>
                    <input type="text" class="form-control" id="subject3" name="subject3" onkeyup="sum()">
                </div>
                <div class="form-group  col-xl-3">
                    <label for="average">Total</label>
                    <input type="text" class="form-control" id="average" name="average">
                    <input type="text" class="form-control" id="status" name="status">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
          </form>
    </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script>
        function sum() {
            var firstNum = document.getElementById('subject1').value;
            var secondNum = document.getElementById('subject2').value;
            var thirdNum = document.getElementById('subject3').value;

            var result = parseFloat(firstNum) + parseFloat(secondNum) + parseFloat(thirdNum);
            var avg = result / 3;
            
            if(avg >= 75 && avg <= 100){
                document.getElementById('average').value = avg.toFixed(2);
                document.getElementById('status').value = 'PASSED';
            }else if(avg >= 69 && avg <= 74){
                document.getElementById('average').value = avg.toFixed(2);
                document.getElementById('status').value = 'FAILED';
            }else{
    
            }  
        }
    </script>
</body>
</html>